-- GRADUATION PROJECT 
-- PROJECT BANKING
-- IT HAS 5 TABLES
-- - CASH DEPARTMENT
-- - CHEQUE DEPARTMENT
-- - FD DEPARTMENT
-- - LOAN DEPARTMENT
-- - BRANCH MANAGER (HAVING ALL ACCESS OF ALL TABLES)
--------------------------------------------------------
-- CASH DEPARTMENT
--------------------------------------------------------
CREATE TABLE CUSTINFO (
SERIAL_NO SERIAL  , 
ACCNO INT NOT NULL PRIMARY KEY UNIQUE , 
CLIENT_NAME VARCHAR NOT NULL , 
MOBLIE_NO VARCHAR);
--------------------------------------------------------
--MAIN TABLE 
--------------------------------------------------------
CREATE TABLE MAIN_TRANSACTION (
SERIAL_NO SERIAL  , 
ACCNO INT NOT NULL PRIMARY KEY UNIQUE , 
CLIENT_NAME VARCHAR NOT NULL , 
MOBLIE_NO VARCHAR ,
BALANCE INT,
EMAIL VARCHAR,
CONSTRAINT fk_customer
      FOREIGN KEY(ACCNO)  
	  REFERENCES CUSTINFO(ACCNO));
--------------------------------------------------------
CREATE TABLE HISTORY (
SERIAL_NO SERIAL  , 
ACCNO INT  , 
CLIENT_NAME VARCHAR  , 
MOBLIE_NO VARCHAR ,
BALANCE INT,
EMAIL VARCHAR,
EDITER_NAME VARCHAR,
TIME VARCHAR);
