----------------------------------------------------------------------------------------
-- FUNCTION OF AVERAGE (TOTAL(2))(1)
----------------------------------------------------------------------------------------
CREATE FUNCTION AVG_COUNTER()
RETURNS INT AS $AVGCOUNTER$
declare
	AVGCOUNTER FLOAT;
BEGIN
	select AVG(BALANCE) into AVGCOUNTER from MAIN_TRANSACTION ;
	return AVGCOUNTER;
END;
$AVGCOUNTER$ LANGUAGE plpgsql;
----------------------------------------------------------------------------------------
--FUNCTION OF SUM (2)
----------------------------------------------------------------------------------------
CREATE FUNCTION TOTAL_COUNTER()
RETURNS INT AS $TOTALCOUNTER$
declare
	TOTALCOUNTER FLOAT;
BEGIN
	select SUM(BALANCE) into TOTALCOUNTER from MAIN_TRANSACTION ;
	return TOTALCOUNTER;
END;
$TOTALCOUNTER$ LANGUAGE plpgsql;

--------------------------------------------------------------------------------------------
-- Fucntion to Trigger (2)
--------------------------------------------------------------------------------------------
CREATE FUNCTION UPDATE_DATA()
	RETURNS trigger as
$$
BEGIN 
	INSERT INTO HISTORY (ACCNO,CLIENT_NAME,MOBLIE_NO,BALANCE,EMAIL,EDITER_NAME,TIME ) VALUES 
	(NEW.ACCNO,NEW.CLIENT_NAME,NEW.MOBLIE_NO,NEW.BALANCE,NEW.EMAIL,CURRENT_USER, CURRENT_DATE);
RETURN NEW;
END;
$$
LANGUAGE 'plpgsql';
CREATE TRIGGER UPDATE_DATA
AFTER UPDATE
ON MAIN_TRANSACTION
FOR EACH ROW
EXECUTE PROCEDURE UPDATE_DATA();
----------------------------------------------------------------------------------------
CREATE FUNCTION INSERT_DATA()
	RETURNS trigger as
$$
BEGIN 
	INSERT INTO HISTORY (ACCNO,CLIENT_NAME,MOBLIE_NO,BALANCE,EMAIL,EDITER_NAME,TIME ) VALUES 
	(NEW.ACCNO,NEW.CLIENT_NAME,NEW.MOBLIE_NO,NEW.BALANCE,NEW.EMAIL,CURRENT_USER, CURRENT_DATE);
RETURN NEW;
END;
$$
LANGUAGE 'plpgsql';
CREATE TRIGGER INSERT_DATA
AFTER INSERT
ON MAIN_TRANSACTION
FOR EACH ROW
EXECUTE PROCEDURE INSERT_DATA();
----------------------------------------------------------------------------------------
-- LOGINS AND ACCESS
----------------------------------------------------------------------------------------
CREATE ROLE CASHDEP
LOGIN
PASSWORD 'CASH@1';
----------------------------------------------------------------------------------------
GRANT SELECT,INSERT,UPDATE
ON CUSTINFO , MAIN_TRANSACTION
TO CASHDEP ;
-- CREATE NEW SERVER WITH ID = cashdep & PASSWORD = CASH@1
----------------------------------------------------------------------------------------

